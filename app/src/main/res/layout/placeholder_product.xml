<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/imagePlaceholder"
        android:layout_width="@dimen/small_product_width"
        android:layout_height="@dimen/small_product_height"
        android:background="@android:color/black"
        android:alpha="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/namePlaceholder"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        android:alpha="0.38"
        app:layout_constraintStart_toStartOf="@id/imagePlaceholder"
        app:layout_constraintEnd_toEndOf="@id/imagePlaceholder"
        app:layout_constraintTop_toBottomOf="@id/imagePlaceholder" />

    <View
        android:layout_width="72dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/black"
        android:alpha="0.38"
        app:layout_constraintStart_toStartOf="@id/namePlaceholder"
        app:layout_constraintTop_toBottomOf="@id/namePlaceholder" />

</androidx.constraintlayout.widget.ConstraintLayout>